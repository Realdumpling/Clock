                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding Name}" Width="20" Height="20" Margin="0,2,5,2" />
                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                    </StackPanel>

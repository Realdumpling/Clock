                  Name="cmbFontFamily" 
                  SelectedIndex="0" SelectionChanged="cmbFontFamily_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontFamily="{Binding .}" Text="{Binding Source}" FontSize="14" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="2" Margin="0,4,10,4" Grid.ColumnSpan="4" Name="cmbFontSize"
                  SelectedIndex="8"  FontSize="16" SelectionChanged="cmbFontSize_SelectionChanged"/>

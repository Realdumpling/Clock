        <RadioButton Name="B_L" Grid.Row="4" Grid.Column="3" Content="B-L" FontSize="14" Checked="B_L_Checked" Margin="0,0,0,26" Grid.RowSpan="2" Foreground="BurlyWood"/>
        <RadioButton Name="B_R" Grid.Row="4" Grid.Column="4" Content="B-R" FontSize="14" Checked="B_R_Checked" Margin="0,0,0,26" Grid.RowSpan="2" Foreground="BurlyWood"/>

                   Grid.Row="5" VerticalAlignment="Center" Grid.ColumnSpan="4" ValueChanged="Scrl_ValueChanged" 
                   SmallChange="0.01" Height="17" Margin="0,0,10,0" Background="#FF3F3F3F" BorderBrush="#FF97A0A5"/>
    </Grid>
</Window>

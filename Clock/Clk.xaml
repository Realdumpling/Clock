<Window x:Class="Clock.Clk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
         WindowStyle="None" Name="ccp" Height="40" 
        AllowsTransparency="True" ResizeMode="NoResize" Topmost="True" SizeToContent="Width"
        ShowInTaskbar="False"  WindowStartupLocation="Manual" 
        FontFamily="Arial" FontSize="18" Foreground="AliceBlue" Loaded="ccp_Loaded">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity="0.01"/>
    </Window.Background>
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="txt" Initialized="txt_Initialized" MouseLeftButtonDown="txt_MouseLeftButtonDown"/>
    </StackPanel>
</Window>
